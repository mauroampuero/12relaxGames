        <link href="/css/styledetalle.css" rel="stylesheet">
    </head>
        <body>
            <header>
                <div class="navbar">
                   <div class="main-navbar">
                      <a href="#">Inicio <i class="fas fa-home"></i> </a>
                      <a href="#">Ingresar <i class="fas fa-sign-in-alt"></i> </a>
                      <a href="#">Perfil <i class="fas fa-user"></i> </a>
                      <a href="#">Comunidad <i class="fas fa-users"></i> </a>
